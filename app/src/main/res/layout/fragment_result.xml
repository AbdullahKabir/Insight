<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.apphousebd.austhub.mainUi.fragments.ResultFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            app:tabBackground="@drawable/tab_change_color"
            app:tabGravity="fill"
            app:tabIndicatorColor="#edda07"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#dd3336"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/result_tab_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_half_vertical_margin"
        android:paddingRight="@dimen/activity_half_vertical_margin"/>

</LinearLayout>
