<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/reminder_item_root"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tool:background="@drawable/bbackground1"
    android:background="@drawable/background_state_drawable"
    android:clickable="true">

    <ImageView
        android:id="@+id/reminder_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:contentDescription="@string/reminder_iem_logo"
        android:paddingRight="10dp"
        android:src="@drawable/reminder_item_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/reminder_subject_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/reminder_details_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Details"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/reminder_date_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/reminder_time_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/reminder_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="16dp"
        android:src="@drawable/reminder_item_delete_icon"
        android:background="@drawable/background_state_drawable"
        />

</RelativeLayout>