<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.apphousebd.austhub.mainUi.fragments.RoutineListFragment">

    <TextView
        android:id="@+id/activity_routine_clock_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#ad1457"
        android:textSize="12sp"
        tools:text="Sun"/>

    <LinearLayout
        android:id="@+id/user_year_semester_section_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_routine_clock_day"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/user_year_semester_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#ef0054"/>

    </LinearLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/routine_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_year_semester_section_container"
        android:gravity="center"
        android:keepScreenOn="true"
        android:scaleType="fitXY"/>

    <ListView
        android:id="@+id/routine_day_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_year_semester_section_container"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:divider="#085c80"
        android:dividerHeight="2dp"
        android:drawSelectorOnTop="true"
        android:visibility="gone"/>

</RelativeLayout>
